begin
   require "jeweler"
   Jeweler::Tasks.new do |gem|
    	gem.name = "cable"
    	gem.authors = ["Spencer Markowski","The Able Few"]
    	gem.summary = "Cable Admin Engine for Rails 3"
    	gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*", "{public}/**/*"]
   end
rescue
   puts "Jeweler or one of its dependencies is not installed"
end
